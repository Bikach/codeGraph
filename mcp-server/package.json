  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "neo4j-driver": "^5.28.1",
    "tree-sitter": "^0.21.1",
    "tree-sitter-kotlin": "^0.3.8",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@testcontainers/neo4j": "^11.10.0",
    "@types/node": "^22.15.30",
    "testcontainers": "^11.10.0",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "vitest": "^4.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  }
