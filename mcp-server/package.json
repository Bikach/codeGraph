{
  "name": "@codegraph/mcp-server",
  "version": "0.1.0",
  "description": "MCP Server for CodeGraph - Code analysis and navigation via Neo4j knowledge graph",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "codegraph",
    "neo4j",
